SHELL = /bin/bash
MAKE_PARENT_PATH := $(shell dirname $(realpath $(firstword $(MAKEFILE_LIST))))
export NEW_WINDOW_TARGET_PATH := $(shell dirname $(MAKE_PARENT_PATH))
SCRIPTS_DIR := $(shell dirname $(MAKE_PARENT_PATH))/scripts

.PHONY: all

all: echo bootstrap

echo:
	@echo "DOTFILES_DIR:$(DOTFILES_DIR)"
	@echo "STOW_DIR:$(STOW_DIR)"
	@echo "XDG_CONFIG_HOME:$(XDG_CONFIG_HOME)"
	@echo "MAKE_PARENT_PATH:$(MAKE_PARENT_PATH)"
	@echo "MAKE_GRAND_PARENT_DIRECTORY:$(MAKE_GRAND_PARENT_DIRECTORY)"
	@echo "NEW_WINDOW_TARGET_PATH:$(NEW_WINDOW_TARGET_PATH)"

bootstrap: $(SCRIPTS_DIR)/bootstrap.sh
	@$(SCRIPTS_DIR)//bootstrap

defaults: $(SCRIPTS_DIR)/defaults.sh
	@$(SCRIPTS_DIR)//defaults.sh dontkillapps
